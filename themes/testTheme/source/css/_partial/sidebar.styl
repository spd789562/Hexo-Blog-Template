.container
  position relative
  min-height 100%
.sidebar
  position fixed
  top 0
  height 100%
  width 300px
  padding 1rem
  box-shadow 0 0 5px #333
  background-image linear-gradient(#64D4CF 22rem, #FFF 22rem)
  transition transform .5s ease
  z-index 8
  +md-size()
    transform translateX(-300px)
  &-photo
    position relative
    &-switch
      transform scale(0)
      &-button
        position absolute
        left 0
        right 0
        top 3rem
        margin-left auto
        margin-right auto
        width 2rem
        height 6rem
        z-index 2
        cursor pointer
        border-radius 50%
      &:checked
        & ~ ^[1]
          &-container
            .sidebar-photo-img
              &__group
                opacity 1
                z-index 3
                transform scale(1)
                cursor pointer
                transition-delay .1s
              &__left
              &__right
                opacity 0
              &__left
                transform translateX(3rem) scale(1.3)
              &__right
                transform translateX(-3rem) scale(1.3)
    &-container
      position relative
      margin-top 2rem
      clearfix()
    &-img
      &__group
      &__left
      &__right
        overflow hidden
        border-radius 50%
        border 5px solid #FFF
        box-shadow inset 0 0 15px 3px #333
        transition:
          transform .5s cubic-bezier(0.39,-0.29, 0.23, 1.46),
          opacity .5s,
          box-shadow .5s
        img
          transition .87s linear
        &:hover
          box-shadow:
            inset 0 0 10px 1px #ababab,
            0 0 20px 2px #cdcdcd
          img
            transform scale(1.2)
      &__group
        size(12rem)
        margin-left auto
        margin-right auto
        position absolute
        left 0
        right 0
        opacity 0
        transform scale(.8)
      &__left
      &__right
        size(8rem)
        position relative
        top 2rem
        transform scale(1)
        &:hover
          z-index 1
      &__left
        float left
        left 1.5rem
        &:hover
          z-index 1
      &__right
        float right
        right 1.5rem
  &-author
    margin-top 4rem
    text-align center
    font-size 2rem
    color #FFF
  &-link
    &-list
      margin-top 4rem
      padding 2rem
      color #64D4CF
      font-size 1.5rem
    &-item
      margin-bottom .6rem
      padding-left 1rem